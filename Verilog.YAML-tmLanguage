# A.6.2
  blocking-assignment:
    patterns:
      - include: '#comments'
      - begin: '='
        beginCaptures:
          '0': { name: keyword.operator.assign.verilog }
        end: ';'
        endCaptures:
          '0': { name: punctuation.terminator.statement.verilog }
        patterns:
          - include: '#repeat-statement'
          # capture expressions in-between = and ; to avoid ternary operators being parsed as block labels
          - include: '#expression'
          - include: '#delay-or-event-control'
      - include: '#lvalue'
  nonblocking-assignment:
    patterns:
      - include: '#comments'
      - begin: '<='
        beginCaptures:
          '0': { name: keyword.operator.nonblocking-assignment.verilog }
        end: ';'
        endCaptures:
          '0': { name: punctuation.terminator.statement.verilog }
        patterns:
          - include: '#repeat-statement'
          # capture expressions in-between <= and ; to avoid ternary operators being parsed as block labels
          - include: '#expression'
          - include: '#delay-or-event-control'
      - include: '#lvalue'
  procedural-continuous-assignment:
    patterns:
      - begin: '\b(release|deassign)\b'
        beginCaptures:
          '1': { name: keyword.other.verilog }
        end: ';'
        endCaptures:
