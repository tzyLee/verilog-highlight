    endCaptures:
      '0': { name: entity.name.label }
    patterns:
      - include: '#comments'
# A.6.4
  statement:
    patterns:
      - include: '#comments'
      - include: '#compiler-directive'
      - include: '#parallel-block'
      - include: '#sequential-block'
      - include: '#conditional-statement'
      - include: '#loop-statement'
      - include: '#wait-statement'
      - include: '#disable-statement'
      - include: '#case-statement'
      - include: '#task-enable' # need to be before assignments
      - include: '#event-trigger'
      # highlight module type when two identifiers are separated by space and on the same line
      # the cost of distinguishing the form of module instantiation and assignment is too high
      # current implementation is from: https://github.com/mshr-h/vscode-verilog-hdl-support
      # 1. This makes adjcent two word followed by ( or end-of-line become module instantiation
      #    which can lead to some undesired effects, for example:
      #      assign a
      #      = 3;
      #    would become instatiation
      # 2. This does not support parameter value assignment, which can be easily mixed up with delay, for example
      #      Adder #(bitwidth) u1(a, b, sum);
      #    is not highlighted.
      # it should be fine in most situations.
      # excluding all `module-or-generate-item` keywords may be a potential fix.
      # TODO: matching all keywords of module-or-generate-item to properly tokenize
      #       generate-constructs, and fixing the problem above.
      - match: '^\s*({{identifier}})(?:{{commentOrSpace}})+({{identifier}})(?<!begin|if)(?:{{commentOrSpace}})*(?=\(|$)'
        captures:
          '1': { name: entity.name.type.module.verilog }
          '2': { name: comment.block.verilog }
          '3': { name: comment.line.double-slash.verilog }
          '4': { name: entity.name.variable.module.verilog }
          '5': { name: comment.block.verilog }
          '6': { name: comment.line.double-slash.verilog }
      - include: '#blocking-assignment'
      - include: '#nonblocking-assignment'
      - include: '#procedural-timing-control'
      - begin: '\(' # condition of for loop
        end: '\)'
        patterns:
          - include: '#assignment'
          - name: punctuation.separator.statement.verilog
            match: ';'
          - include: '#expression'
      # null statement
      - name: punctuation.terminator.statement.verilog
        match: ';'
